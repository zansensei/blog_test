{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Page index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Content</th>
                <th>Path</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.id }}</td>
                    <td>{{ page.title }}</td>
                    <td>{{ page.subtitle }}</td>
                    <td>{{ page.content | raw }}</td>
                    <td>{{ page.path }}</td>
                    <td>{{ page.isActive ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_page_show', {'id': page.id}) }}">show</a>
                        <a href="{{ path('app_page_edit', {'id': page.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
