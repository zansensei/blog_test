{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <div class="container">
        <h1>Page</h1>
        <a class="btn btn-primary" href="{{ path('app_page_index') }}">back to list</a>

        <a class="btn btn-success" href="{{ path('app_page_edit', {'id': page.id}) }}">edit</a>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ page.subtitle }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ page.content }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ page.path }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ page.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
