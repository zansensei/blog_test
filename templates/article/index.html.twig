{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Article index</h1>
        <a class="btn btn-primary" href="{{ path('app_article_new') }}">Create new</a>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>Date</th>
                <th>Publier</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content | raw }}</td>
                    <td>{{ article.author }}</td>
                    <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        {% if article.isPublish %}
                            <h4><span class="badge bg-success">Publier</span></h4>
                        {% else %}
                            <h4><span class="badge bg-danger">Non Publier</span></h4>
                        {% endif%}
                    </td>
                    <td>
                        <a class="btn btn-success" href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                        <a class="btn btn-info" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
