{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <div class="container">
        <h1>Menu</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ menu.link }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_menu_index') }}">back to list</a>

        <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">edit</a>

        {{ include('menu/_delete_form.html.twig') }}
    </div>


{% endblock %}
